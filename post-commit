#!/bin/bash

## 如果是 revert 就演奏（？）到退嚕
comment=$(git log --format=%B -n 1)
if [[ $comment == *"This reverts"* ]] ; then
    echo -e "\E[0;34m============================================================="
    echo -e "\E[0;34m|\E[0;32m  revert 了，倒退嚕喔"
    echo -e "\E[0;34m|\E[0;32m  咚 咚咚咚 登登登登登 登登登登登 登登登登 登登登登 登 登"
    echo -e "\E[0;34m=============================================================\E[0m"
fi
